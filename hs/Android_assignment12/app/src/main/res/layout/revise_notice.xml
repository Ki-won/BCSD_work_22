<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.example.noticeboard.NoticeData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/re_notice_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@{data.title}"
            android:maxLength="40"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/re_notice_content"
            android:inputType="text|textMultiLine"
            android:scrollbars="vertical"
            android:lines="20"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:text="@{data.content}"
            app:layout_constraintTop_toBottomOf="@+id/re_notice_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/re_notice_writer"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@{data.name}"
            android:maxLength="12"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/re_notice_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noticeReviseBtn"
            android:text="수정하기"
            app:layout_constraintStart_toEndOf="@+id/returnBtn"
            app:layout_constraintTop_toBottomOf="@id/re_notice_content"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/returnBtn"
            android:text="뒤로가기"
            app:layout_constraintStart_toEndOf="@+id/re_notice_writer"
            app:layout_constraintTop_toBottomOf="@id/re_notice_content"
            app:layout_constraintEnd_toStartOf="@id/noticeReviseBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>